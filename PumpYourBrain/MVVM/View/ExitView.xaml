<UserControl x:Class="PumpYourBrain.MVVM.View.ExitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PumpYourBrain.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Are you sure you want to exit?"
                   FontSize="48"
                   Foreground="#C3E0E5"
                   FontFamily="/Fonts/#Anton"
                   Margin="0, 0, 0, 50"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Click="Button_Click"
                Style="{StaticResource ExitButtonStyle}"
                    Margin="0, 0, 30, 0">
                Yes
            </Button>
            <Button Command="{Binding DataContext.HomeViewCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Style="{StaticResource ExitButtonStyle}">No</Button>
        </StackPanel>
        

    </StackPanel>
</UserControl>
